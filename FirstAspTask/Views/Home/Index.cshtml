@model FirstAspTask.Models.FoodViewModel

<!DOCTYPE html>

<html>
<head>
</head>
<body>

    <div class="accordion" id="accordionExample">
        @{
            var index = 1;

            @foreach (var item in Model.Foods)
            {
                <div class="card">
                    <div class="card-header" id="heading_@index">
                        <h2 class="mb-0">
                            <button class="btn btn-outline-light text-dark" type="button" data-toggle="collapse" data-target="#collapse_@index" aria-expanded="true" aria-controls="collapse_@index">
                                @index . @item.Name
                            </button>
                        </h2>
                    </div>

                    <div id="collapse_@index" class="collapse @(index == 1 ? "show" : "") " aria-labelledby="heading_@index" data-parent="#accordionExample">
                        <div class="card-body">
                            <p>Category : @item.Category</p>
                            <p>Price : @item.Price $</p>
                        </div>
                    </div>
                </div>
                index++;
            }
        }
    </div>
</body>
</html>